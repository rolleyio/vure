
{
  "name": "@rolley/framework",
  "version": "1.0.0",
  "private": true,
  "description": "The firebase v9 application framework",
  "author": "Matt Rollinson <matt@rolley.io>",
  "homepage": "",
  "license": "MIT",
  "type": "module",
  "main": "dist/es5/lib.umd.js",
  "module": "dist/lib.es.js",
  "exports": {
    ".": {
      "import": "./dist/my-lib.es.js",
      "require": "./dist/my-lib.umd.js"
    },
    "./": "./"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:lib && pnpm build:types",
    "build:lib": "vite build",
    "build:types": "tsc --project ./tsconfig.build.json",
    "lint": "eslint 'src/**/*.{ts,vue}'",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.2.3",
    "@vue/compiler-sfc": "3.2.2",
    "tslib": "^2.0.0",
    "typescript": "^4.1.0",
    "vite": "^2.0.0"
  },
  "peerDependencies": {
    "firebase": "^9.1.3",
    "vue": "^3.0.4",
    "geofire-common": "^5.2.0",
    "zod": "^3.10.3"
  }
}