{
  "name": "@rolley/framework",
  "version": "1.0.0",
  "private": true,
  "description": "The firebase v9 application framework",
  "author": "Matt Rollinson <matt@rolley.io>",
  "homepage": "",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/umd/main.js",
  "module": "dist/esm/main.js",
  "exports": {
    ".": {
      "import": "./dist/esm/main.js",
      "require": "./dist/umd/main.js"
    },
    "./": "./"
  },
  "typings": "types/main.d.ts",
  "files": [
    "dist",
    "types",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./types && tsc --build --clean",
    "build": "pnpm clean && pnpm build:umd && pnpm build:esm",
    "build:esm": "tsc --project ./tsconfig.json",
    "build:umd": "tsc --project ./tsconfig.json --outDir dist/umd --module umd --target es6",
    "lint": "eslint 'src/**/*.{ts,vue}'",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.2.3",
    "@vue/compiler-sfc": "3.2.2",
    "tslib": "^2.0.0",
    "typescript": "^4.1.0",
    "vite": "^2.0.0"
  },
  "peerDependencies": {
    "firebase": "^9.1.3",
    "vue": "^3.0.4",
    "geofire-common": "^5.2.0",
    "zod": "^3.10.3"
  }
}
